<section class="weather is-hidden" id="weather">
  <h2>Current weather</h2>
  <img class="icon" src="" alt="" />

  <p>Location: <span data-field="location">{{timezone}}</span></p>
  <p>Temperature: <span data-field="temp">{{temperature}}</span></p>
  <p>Humidity: <span data-field="humidity">{{humidity}}</span></p>
  <p>Wind: <span data-field="wind">{{windSpeed}}</span></p>
  <p>Conditions: <span data-field="conditions">{{summary}}</span></p>
</section>